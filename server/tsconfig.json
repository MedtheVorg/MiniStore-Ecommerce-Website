{
  "compilerOptions": {
  
    "target": "es2016",                                  
    "module": "ESNext",        
    "moduleResolution": "Node",                       
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                  
    "skipLibCheck": true,
    "allowImportingTsExtensions": true ,
    "noEmit": true,
  },
  "include": ["index.ts"],
  "ts-node": {
    "esm": true
  }
}
